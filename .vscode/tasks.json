{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++:gcc: compile active C program",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-g",
                "-o",
                "${fileBasenameNoExtension}",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": false,
            },
            "windows": {
                "group": {
                    "kind": "build",
                    "isDefault": true
                }
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++:clang: compile active C program",
            "command": "clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "C/C++: run active C program",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "C/C++:clang: compile active C program"
            ],
            "command": "./${fileBasenameNoExtension}",
            "windows": {
                "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "dependsOn": [
                    "C/C++:gcc: compile active C program"
                ]
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}