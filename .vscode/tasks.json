{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "C/C++: compile active C program",
            "command": "clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
			"windows": {
                // Use gcc for Windows.
				"command": "gcc",
				"args": [
                    "-Wall",
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}\\${fileBasenameNoExtension}.exe"
                ]
			},
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "C/C++: run active C program",
            "type": "process",
            "dependsOrder": "sequence",
            "dependsOn": [
                "C/C++: compile active C program"
            ],
            "command": "${fileDirname}/${fileBasenameNoExtension}.out",
            "windows": {
                "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
